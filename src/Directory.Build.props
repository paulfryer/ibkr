<Project>
  <!--
    Directory.Build.props - Shared properties for all SDK projects
    Automatically imported by all .csproj files in this directory and subdirectories
  -->

  <PropertyGroup>
    <!-- Common Package Metadata -->
    <Authors>Paul Fryer</Authors>
    <Company>IBKR SDK Contributors</Company>
    <Copyright>Copyright Â© 2025 IBKR SDK Contributors</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/paulfryer/ibkr</PackageProjectUrl>
    <RepositoryUrl>https://github.com/paulfryer/ibkr.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>ibkr;interactive-brokers;trading;api;rest;sdk</PackageTags>

    <!-- Documentation -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageReadmeFile>README.md</PackageReadmeFile>

    <!--
      Suppress warnings common in auto-generated code:
      - CS1591: Missing XML documentation
      - CS0612: Type or member is obsolete (generated from OpenAPI deprecated markers)
      - CS8600: Converting null literal or possible null value to non-nullable type
      - CS8603: Possible null reference return
      - CS8604: Possible null reference argument
      - CS8619: Nullability of reference types in value doesn't match target type
      - CS8625: Cannot convert null literal to non-nullable reference type
      - CS8765: Nullability of parameter doesn't match overridden member
    -->
    <NoWarn>$(NoWarn);CS1591;CS0612;CS8600;CS8603;CS8604;CS8619;CS8625;CS8765</NoWarn>

    <!-- Source Link Support (for debugging) -->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>

    <!-- Build Settings -->
    <LangVersion>latest</LangVersion>
    <!--
      Treat warnings as errors in Release builds, but not for auto-generated SDK code
      Note: NoWarn suppressions above prevent generated code warnings from becoming errors
    -->
    <TreatWarningsAsErrors Condition="'$(Configuration)' == 'Release'">true</TreatWarningsAsErrors>
  </PropertyGroup>

  <!-- Source Link Package (for debugging into SDK source) -->
  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All"/>
  </ItemGroup>

</Project>
